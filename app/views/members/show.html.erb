<div>
  <div>
    <h1>
      Member #<%= @the_member.id %> details
    </h1>

    <div>
      <div>
        <a href="/members">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_member/<%= @the_member.id %>">
          Delete member
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_member.name %>
      </dd>

      <dt>
        Nickname
      </dt>
      <dd>
        <%= @the_member.nickname %>
      </dd>

      <dt>
        Hometown
      </dt>
      <dd>
        <%= @the_member.hometown %>
      </dd>

      <dt>
        Bio
      </dt>
      <dd>
        <%= @the_member.bio %>
      </dd>

      <dt>
        Image
      </dt>
      <dd>
        <%= @the_member.image %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_member.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_member.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit member
    </h2>

    <form action="/modify_member/<%= @the_member.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_member.name %>">
      </div>

      <div>
        <label for="nickname_box">
          Nickname
        </label>

        <input type="text" id="nickname_box" name="query_nickname" value="<%= @the_member.nickname %>">
      </div>

      <div>
        <label for="hometown_box">
          Hometown
        </label>

        <input type="text" id="hometown_box" name="query_hometown" value="<%= @the_member.hometown %>">
      </div>

      <div>
        <label for="bio_box">
          Bio
        </label>

        <input type="text" id="bio_box" name="query_bio" value="<%= @the_member.bio %>">
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image" value="<%= @the_member.image %>">
      </div>

      <button class="btn btn-primary">
        Update member
      </button>
    </form>
  </div>
</div>

<hr>
