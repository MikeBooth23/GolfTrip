<div>
  <div>
    <h1>
      List of all date votes
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new date vote
    </h2>

    <form action="/insert_date_vote" method="post">
      <div>
        <label for="date_box">
          Date
        </label>

        <input type="date" id="date_box" name="query_date">
      </div>

      <div>
        <label for="votes_box">
          Votes
        </label>

        <input type="text" id="votes_box" name="query_votes">
      </div>

      <button>
        Create date vote
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Date
        </th>

        <th>
          Votes
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_date_votes.each do |a_date_vote| %>
      <tr>
        <td>
          <%= a_date_vote.id %>
        </td>

        <td>
          <%= a_date_vote.date %>
        </td>

        <td>
          <%= a_date_vote.votes %>
        </td>

        <td>
          <%= time_ago_in_words(a_date_vote.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_date_vote.updated_at) %> ago
        </td>

        <td>
          <a href="/date_votes/<%= a_date_vote.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
