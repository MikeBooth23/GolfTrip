<div>
  <div>
    <h1>
      List of all galleries
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new gallery
    </h2>

    <form action="/insert_gallery" method="post">
      <div>
        <label for="trip_box">
          Trip
        </label>

        <input type="text" id="trip_box" name="query_trip">
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <div>
        <label for="votes_box">
          Votes
        </label>

        <input type="text" id="votes_box" name="query_votes">
      </div>

      <button>
        Create gallery
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>

        <th>
          Trip
        </th>

        <th>
          Image
        </th>

        <th>
          Description
        </th>

        <th>
          Votes
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_galleries.each do |a_gallery| %>
      <tr>

        <td>
          <%= a_gallery.trip %>
        </td>

        <td>
          <%#= a_gallery.image %>
          <%= image_tag(a_gallery.image, width: "200") if a_gallery.image.present? %>
        </td>

        <td>
          <%= a_gallery.description %>
        </td>

        <td>
          <%= a_gallery.votes %>
        </td>

        <td>
          <a href="/galleries/<%= a_gallery.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
