        <a class="nav-link" href = "/galleries"> Gallery </a>
      </li>                     
    </ul>
  </div>
  </div>
  </nav>


  <% if notice.present?%>
  <div style="color: green">
  <%= notice%>
  </div>
  <% end %>

  <% if alert.present?%>
  <div style="color: red">
  <%= alert%>
  </div>
  <% end %>
    <%= yield %>
  </body>
</html>
